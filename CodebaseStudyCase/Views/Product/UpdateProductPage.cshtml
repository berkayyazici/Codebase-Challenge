@model CodebaseStudyCase.Models.Product

<div class="container" style="width:40%;margin-top:2%">

    @using (Html.BeginForm("UpdateProduct", "Product", FormMethod.Post)){
      
      <div class="form-group">
         @Html.LabelFor(m => m.Id, new { @class = "col-md-2 control-label" }) 
         <div class="col-md-10"> 
            @Html.TextBoxFor(m => m.Id, new { @readonly = "readonly"}) 
            @Html.ValidationMessageFor(m => m.Id) 
         </div>
      </div>

      <div class="form-group">
         @Html.LabelFor(m => m.Name, new { @class = "col-md-2 control-label" }) 
         <div class="col-md-10"> 
            @Html.TextBoxFor(m => m.Name, new { @class = "form-control" }) 
            @Html.ValidationMessageFor(m => m.Name) 
         </div>
      </div>

      <div class="form-group">
         @Html.LabelFor(m => m.Price, new { @class = "col-md-2 control-label" }) 
         <div class="col-md-10"> 
            @Html.TextBoxFor(m => m.Price, new { @class = "form-control" }) 
            @Html.ValidationMessageFor(m => m.Price) 
         </div>
      </div>

      <div class="form-group">
         @Html.LabelFor(m => m.QuantityNumber, new { @class = "col-md-2 control-label" }) 
         <div class="col-md-10"> 
            @Html.TextBoxFor(m => m.QuantityNumber, new { @class = "form-control" }) 
            @Html.ValidationMessageFor(m => m.QuantityNumber) 
         </div>
      </div>

        <input type="submit" value="Update Product" class="btn btn-block btn-primary" />
    }
   
    

</div>
